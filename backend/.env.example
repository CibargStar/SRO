#============================================
# Базовые настройки
# ============================================

# Режим работы приложения
# Возможные значения: development, production, test
NODE_ENV=development

# Порт, на котором будет работать сервер
PORT=3000

# URL подключения к базе данных
# Для SQLite: file:./prisma/dev.db
# Для PostgreSQL: postgresql://user:password@localhost:5432/dbname?schema=public
DATABASE_URL=file:./prisma/dev.db

# Уровень логирования
# Возможные значения: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# Авторизация и безопасность
# ============================================

# Email root-пользователя (администратора системы)
# Должен быть валидным email адресом
# ВАЖНО: Используйте уникальный email, не используйте публичные адреса
ROOT_EMAIL=admin@example.com

# Пароль root-пользователя
# Требования безопасности:
# - Минимум 12 символов
# - Должен содержать заглавные и строчные буквы
# - Должен содержать цифры
# - Должен содержать специальные символы (!@#$%^&*)
# ВАЖНО: Используйте сложный пароль! В production обязательно смените на уникальный
ROOT_PASSWORD=ChangeMe123!@#

# Секретный ключ для подписи Access JWT токенов
# Требования:
# - Минимум 32 символа
# - Должен быть криптографически случайным
# - НЕ должен совпадать с JWT_REFRESH_SECRET
# Рекомендация: Используйте openssl rand -base64 32 для генерации
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars-long-change-in-production

# Секретный ключ для подписи Refresh JWT токенов
# Требования:
# - Минимум 32 символа
# - Должен быть криптографически случайным
# - НЕ должен совпадать с JWT_ACCESS_SECRET
# Рекомендация: Используйте openssl rand -base64 32 для генерации
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-long-change-in-production

# Время жизни Access токена
# Формат: число + единица времени (s=секунды, m=минуты, h=часы, d=дни)
# Рекомендуемое значение: 15m (15 минут)
# Не рекомендуется: более 1 часа (безопасность)
JWT_ACCESS_EXPIRES_IN=15m

# Время жизни Refresh токена
# Формат: число + единица времени (s=секунды, m=минуты, h=часы, d=дни)
# Рекомендуемое значение: 7d (7 дней)
# Должно быть больше JWT_ACCESS_EXPIRES_IN
JWT_REFRESH_EXPIRES_IN=7d
 